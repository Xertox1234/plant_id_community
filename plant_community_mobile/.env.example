# Flutter Mobile App - Environment Configuration
# Copy this file to .env and fill in your actual values

# Django Backend API Configuration
# For local development, use http://localhost:8000/api/v1
# For production, use your deployed backend URL
API_BASE_URL=http://localhost:8000/api/v1

# Firebase Configuration (DO NOT COMMIT REAL VALUES)
# These values should match your Firebase project
# Get these from Firebase Console > Project Settings > General
FIREBASE_API_KEY=your-firebase-api-key-here
FIREBASE_APP_ID=your-firebase-app-id-here
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id-here
FIREBASE_PROJECT_ID=your-firebase-project-id-here
FIREBASE_STORAGE_BUCKET=your-storage-bucket-here

# iOS-specific Firebase Config
FIREBASE_IOS_BUNDLE_ID=com.example.plantCommunityMobile
FIREBASE_IOS_APP_ID=your-ios-app-id-here

# Android-specific Firebase Config
FIREBASE_ANDROID_PACKAGE_NAME=com.example.plant_community_mobile
FIREBASE_ANDROID_APP_ID=your-android-app-id-here

# OpenWeather API (for weather integration)
# Get API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweather-api-key-here

# Feature Flags (true/false)
ENABLE_ANALYTICS=false
ENABLE_CRASHLYTICS=false
DEBUG_MODE=true
